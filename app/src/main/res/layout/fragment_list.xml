<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ellipsize="end"

            android:fontFamily="@font/alfa_slab_one"
            android:text="Goods"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <Button
            android:id="@+id/spisok"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"

            android:background="@drawable/custombutton"
            android:enabled="true"
            android:text="Посмотреть все товары"
            android:textColor="@color/colorWhite" />

        <TextView

            android:id="@+id/nesheport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="У вас нет портящихся товаров"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/portyashiesya"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:background="@drawable/loginbuttonoff"
            android:enabled="false"
            android:text="Портящиеся товары"
            android:textColor="@color/colorGray" />



    </LinearLayout>

</RelativeLayout>