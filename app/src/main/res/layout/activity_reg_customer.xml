<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegCustomer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fio10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Ф.И.О"
            android:inputType="text"
            android:paddingLeft="10dp" />
        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            />

        <EditText
            android:id="@+id/telefon10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Ваш номер телефона"
            android:inputType="phone"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/email10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Электронная почта"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/password10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/passwordcheck10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextborder"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Подтвердите пароль"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <Button
            android:id="@+id/registration10"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/loginbuttonoff"
            android:text="Регистрация"
            android:textColor="@color/colorGray"
            android:enabled="false"/>



    </LinearLayout>

</RelativeLayout>