<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView228"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_home_red_24dp"
            tools:srcCompat="@drawable/ic_home_red_24dp"
            />
        <TextView
            android:id="@+id/txtfornamemagazin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/txtforadresmagazin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtfornameprodavec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:paddingLeft="10dp"

            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtforemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:paddingLeft="10dp"

            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtforphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:paddingLeft="10dp"

            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtfortovars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:paddingLeft="10dp"

            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/opentovars"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"

            android:background="@drawable/loginbuttonoff"
            android:enabled="false"
            android:text="Открыть список товаров"
            android:textColor="@color/colorGray" />

    </LinearLayout>
</RelativeLayout>